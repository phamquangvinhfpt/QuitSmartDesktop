<UserControl x:Class="QuitSmartApp.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900">

        <UserControl.Resources>

                <Style x:Key="BackButtonStyle"
                       TargetType="Button">
                        <Setter Property="Background"
                                Value="{DynamicResource QuitSmartPrimaryBrush}"/>
                        <Setter Property="Foreground"
                                Value="White"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource QuitSmartSecondaryBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="2"/>
                        <Setter Property="Padding"
                                Value="12,8"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                 Value="True">
                                                                <Setter Property="Background"
                                                                        Value="{DynamicResource QuitSmartSecondaryBrush}"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="ProfileCardStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="12"/>
                        <Setter Property="Padding"
                                Value="20"/>
                        <Setter Property="Margin"
                                Value="8"/>
                        <Setter Property="Effect">
                                <Setter.Value>
                                        <DropShadowEffect Color="Gray"
                                                          Direction="270"
                                                          ShadowDepth="3"
                                                          BlurRadius="10"
                                                          Opacity="0.15"/>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="FormTextBoxStyle"
                       TargetType="TextBox">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="Padding"
                                Value="12,10"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource QuitSmartPrimaryBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="2"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                                <Border Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="FormComboBoxStyle"
                       TargetType="ComboBox">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="Padding"
                                Value="12,10"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource QuitSmartPrimaryBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="2"/>
                </Style>

                <Style x:Key="FormDatePickerStyle"
                       TargetType="DatePicker">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource QuitSmartPrimaryBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="2"/>
                </Style>

                <Style x:Key="FormLabelStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontWeight"
                                Value="Medium"/>
                        <Setter Property="Margin"
                                Value="0,0,0,8"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                </Style>

                <Style x:Key="SectionHeaderStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="20"/>
                        <Setter Property="FontWeight"
                                Value="Bold"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource QuitSmartSecondaryBrush}"/>
                        <Setter Property="Margin"
                                Value="0,0,0,20"/>
                </Style>

                <Style x:Key="StatCardStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource QuitSmartPrimaryBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="2"/>
                        <Setter Property="CornerRadius"
                                Value="10"/>
                        <Setter Property="Padding"
                                Value="16"/>
                        <Setter Property="Margin"
                                Value="8"/>
                        <Setter Property="Effect">
                                <Setter.Value>
                                        <DropShadowEffect Color="Gray"
                                                          Direction="270"
                                                          ShadowDepth="2"
                                                          BlurRadius="8"
                                                          Opacity="0.2"/>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="ProfileContentTextStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                        <Setter Property="TextWrapping"
                                Value="Wrap"/>
                        <Setter Property="LineHeight"
                                Value="22"/>
                </Style>
        </UserControl.Resources>

        <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
                <ScrollViewer>
                        <StackPanel MaxWidth="1000"
                                    Margin="32,20">

                                <!-- Header với Back Button -->
                                <Grid Margin="0,0,0,24">
                                        <Button Content="← Quay lại"
                                                Style="{StaticResource BackButtonStyle}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Command="{Binding BackCommand}"/>

                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,0,0">
                                                <TextBlock Text="Hồ sơ cá nhân"
                                                           FontSize="32"
                                                           FontWeight="Light"
                                                           Foreground="{DynamicResource QuitSmartSecondaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="Quản lý thông tin và theo dõi tiến trình cai thuốc"
                                                           FontSize="16"
                                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                           HorizontalAlignment="Center"
                                                           TextAlignment="Center"/>
                                        </StackPanel>
                                </Grid>

                                <!-- Thông tin người dùng -->
                                <TextBlock Text="👤 Thông tin cá nhân"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource QuitSmartSecondaryBrush}"
                                           Margin="8,0,8,16"/>

                                <Border Style="{StaticResource ProfileCardStyle}">
                                        <Grid>
                                                <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Username -->
                                                <TextBlock Grid.Row="0"
                                                           Grid.Column="0"
                                                           Text="Tên đăng nhập:"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <TextBox Grid.Row="0"
                                                         Grid.Column="1"
                                                         Text="{Binding UserProfile.Username, Mode=TwoWay}"
                                                         Margin="0,0,0,12"
                                                         IsReadOnly="True"
                                                         Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                                                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

                                                <!-- Email -->
                                                <TextBlock Grid.Row="1"
                                                           Grid.Column="0"
                                                           Text="Email:"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <TextBox Grid.Row="1"
                                                         Grid.Column="1"
                                                         Text="{Binding UserProfile.Email, Mode=TwoWay}"
                                                         Margin="0,0,0,12"
                                                         Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

                                                <!-- Full Name -->
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="0"
                                                           Text="Họ và tên:"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <TextBox Grid.Row="2"
                                                         Grid.Column="1"
                                                         Text="{Binding UserProfile.FullName, Mode=TwoWay}"
                                                         Margin="0,0,0,12"
                                                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

                                                <!-- Phone -->
                                                <TextBlock Grid.Row="3"
                                                           Grid.Column="0"
                                                           Text="Số điện thoại:"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <TextBox Grid.Row="3"
                                                         Grid.Column="1"
                                                         Text="{Binding UserProfile.Phone, Mode=TwoWay}"
                                                         Margin="0,0,0,12"
                                                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

                                                <!-- Quit Date -->
                                                <TextBlock Grid.Row="4"
                                                           Grid.Column="0"
                                                           Text="Ngày bắt đầu cai:"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <DatePicker Grid.Row="4"
                                                            Grid.Column="1"
                                                            SelectedDate="{Binding UserProfile.QuitDate, Mode=TwoWay}"
                                                            Margin="0,0,0,12"/>

                                                <!-- Daily Cigarettes -->
                                                <TextBlock Grid.Row="5"
                                                           Grid.Column="0"
                                                           Text="Thuốc lá/ngày:"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <TextBox Grid.Row="5"
                                                         Grid.Column="1"
                                                         Text="{Binding UserProfile.DailyCigarettes, Mode=TwoWay}"
                                                         Margin="0,0,0,12"
                                                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

                                                <!-- Delete Account Button -->
                                                <Button Grid.Row="6"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        Content="❌ Xóa tài khoản"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        Padding="12,8"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        HorizontalAlignment="Right"
                                                        Margin="0,16,0,0"
                                                        Command="{Binding DeleteAccountCommand}"/>

                                        </Grid>
                                </Border>

                                <!-- Buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,16,0,24">
                                        <Button Content="💾 Lưu thông tin"
                                                Style="{StaticResource QuitSmartButtonStyle}"
                                                Margin="0,0,12,0"
                                                Command="{Binding SaveProfileCommand}"/>
                                        <Button Content="🔑 Đổi mật khẩu"
                                                Background="{DynamicResource QuitSmartAccentBrush}"
                                                Foreground="White"
                                                BorderBrush="{DynamicResource QuitSmartSecondaryBrush}"
                                                BorderThickness="2"
                                                Padding="12,8"
                                                FontWeight="SemiBold"
                                                Cursor="Hand"
                                                Command="{Binding ChangePasswordCommand}"/>
                                </StackPanel>

                                <!-- Thống kê và Thành tựu -->
                                <TextBlock Text="📊 Thống kê và thành tựu"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource QuitSmartSecondaryBrush}"
                                           Margin="8,0,8,16"/>

                                <Grid Margin="0,0,0,24">
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Days Quit -->
                                        <Border Grid.Column="0"
                                                Style="{StaticResource StatCardStyle}">
                                                <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="🗓️"
                                                                   FontSize="24"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,8"/>
                                                        <TextBlock Text="{Binding UserStatistic.DaysQuit}"
                                                                   FontSize="32"
                                                                   FontWeight="Bold"
                                                                   Foreground="{DynamicResource QuitSmartPrimaryBrush}"
                                                                   HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Ngày cai thuốc"
                                                                   FontSize="12"
                                                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Center"/>
                                                </StackPanel>
                                        </Border>

                                        <!-- Money Saved -->
                                        <Border Grid.Column="1"
                                                Style="{StaticResource StatCardStyle}">
                                                <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="💰"
                                                                   FontSize="24"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,8"/>
                                                        <TextBlock FontSize="20"
                                                                   FontWeight="Bold"
                                                                   Foreground="{DynamicResource QuitSmartPrimaryBrush}"
                                                                   HorizontalAlignment="Center">
                                                                <Run Text="{Binding UserStatistic.MoneySaved, StringFormat=N0}"/>
                                                                <Run Text="₫"/>
                                                        </TextBlock>
                                                        <TextBlock Text="Tiền tiết kiệm"
                                                                   FontSize="12"
                                                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Center"/>
                                                </StackPanel>
                                        </Border>

                                        <!-- Cigarettes Avoided -->
                                        <Border Grid.Column="2"
                                                Style="{StaticResource StatCardStyle}">
                                                <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="🚭"
                                                                   FontSize="24"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,8"/>
                                                        <TextBlock Text="{Binding UserStatistic.CigarettesAvoided}"
                                                                   FontSize="24"
                                                                   FontWeight="Bold"
                                                                   Foreground="{DynamicResource QuitSmartPrimaryBrush}"
                                                                   HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Điếu thuốc tránh"
                                                                   FontSize="12"
                                                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                                   HorizontalAlignment="Center"
                                                                   TextAlignment="Center"/>
                                                </StackPanel>
                                        </Border>
                                </Grid>

                                <!-- Recent Badges -->
                                <TextBlock Text="🏆 Thành tựu gần đây"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource QuitSmartSecondaryBrush}"
                                           Margin="8,0,8,16"/>

                                <ItemsControl ItemsSource="{Binding RecentBadges}"
                                              Margin="0,0,0,32">
                                        <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                        <Border Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                                                                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                                                BorderThickness="1"
                                                                CornerRadius="8"
                                                                Padding="12,8"
                                                                Margin="4">
                                                                <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding Icon}"
                                                                                   FontSize="20"
                                                                                   Margin="0,0,8,0"/>
                                                                        <StackPanel>
                                                                                <TextBlock Text="{Binding Name}"
                                                                                           FontWeight="SemiBold"
                                                                                           FontSize="14"/>
                                                                                <TextBlock Text="{Binding Description}"
                                                                                           FontSize="12"
                                                                                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                                        </StackPanel>
                                                                </StackPanel>
                                                        </Border>
                                                </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                </ItemsControl>

                        </StackPanel>
                </ScrollViewer>
        </Grid>
</UserControl>
