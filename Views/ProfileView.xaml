<UserControl x:Class="QuitSmartApp.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

        <UserControl.Resources>
                <Style x:Key="ProfileCardStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="8"/>
                        <Setter Property="Padding"
                                Value="24"/>
                        <Setter Property="Margin"
                                Value="0,0,0,20"/>
                        <Setter Property="Effect">
                                <Setter.Value>
                                        <DropShadowEffect Color="Gray"
                                                          Direction="270"
                                                          ShadowDepth="2"
                                                          BlurRadius="8"
                                                          Opacity="0.2"/>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="FormTextBoxStyle"
                       TargetType="TextBox">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="Padding"
                                Value="12,10"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                </Style>

                <Style x:Key="FormNumberBoxStyle"
                       TargetType="ui:NumberBox">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                </Style>

                <Style x:Key="FormComboBoxStyle"
                       TargetType="ComboBox">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="Padding"
                                Value="12,10"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                </Style>

                <Style x:Key="FormDatePickerStyle"
                       TargetType="DatePicker">
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                </Style>

                <Style x:Key="FormLabelStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontWeight"
                                Value="Medium"/>
                        <Setter Property="Margin"
                                Value="0,0,0,8"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource SystemControlPageTextBaseHighBrush}"/>
                </Style>

                <Style x:Key="SectionHeaderStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="20"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Foreground"
                                Value="ForestGreen"/>
                        <Setter Property="Margin"
                                Value="0,0,0,20"/>
                </Style>
        </UserControl.Resources>

        <ScrollViewer>
                <StackPanel MaxWidth="800"
                            Margin="40,20">

                        <!-- Header -->
                        <StackPanel Margin="0,0,0,32">
                                <TextBlock Text="Hồ sơ cá nhân"
                                           FontSize="28"
                                           FontWeight="Light"
                                           Foreground="ForestGreen"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Cập nhật thông tin để theo dõi tiến trình cai thuốc tốt hơn"
                                           FontSize="16"
                                           Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                           HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Success/Error Messages -->
                        <TextBlock Text="{Binding SuccessMessage}"
                                   Foreground="ForestGreen"
                                   FontSize="14"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center">
                                <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                                <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SuccessMessage}"
                                                                     Value="{x:Null}">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SuccessMessage}"
                                                                     Value="">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                        </DataTrigger>
                                                </Style.Triggers>
                                        </Style>
                                </TextBlock.Style>
                        </TextBlock>

                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="Crimson"
                                   FontSize="14"
                                   Margin="0,0,0,16"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center">
                                <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                                <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ErrorMessage}"
                                                                     Value="{x:Null}">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ErrorMessage}"
                                                                     Value="">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                        </DataTrigger>
                                                </Style.Triggers>
                                        </Style>
                                </TextBlock.Style>
                        </TextBlock>

                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Personal Information -->
                                <Border Grid.Column="0"
                                        Style="{StaticResource ProfileCardStyle}"
                                        Margin="0,0,10,20">
                                        <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,20">
                                                        <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                                     Glyph="&#xE77B;"
                                                                     FontSize="24"
                                                                     Foreground="ForestGreen"
                                                                     Margin="0,0,12,0"/>
                                                        <TextBlock Text="Thông tin cá nhân"
                                                                   Style="{StaticResource SectionHeaderStyle}"
                                                                   Margin="0"/>
                                                </StackPanel>

                                                <TextBlock Text="Họ và tên"
                                                           Style="{StaticResource FormLabelStyle}"/>
                                                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                                         Style="{StaticResource FormTextBoxStyle}"/>

                                                <TextBlock Text="Ngày sinh"
                                                           Style="{StaticResource FormLabelStyle}"/>
                                                <DatePicker SelectedDate="{Binding DateOfBirth}"
                                                            Style="{StaticResource FormDatePickerStyle}"/>

                                                <TextBlock Text="Giới tính"
                                                           Style="{StaticResource FormLabelStyle}"/>
                                                <ComboBox SelectedItem="{Binding Gender}"
                                                          ItemsSource="{Binding GenderOptions}"
                                                          Style="{StaticResource FormComboBoxStyle}"/>
                                        </StackPanel>
                                </Border>

                                <!-- Quit Information -->
                                <Border Grid.Column="1"
                                        Style="{StaticResource ProfileCardStyle}"
                                        Margin="10,0,0,20">
                                        <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,20">
                                                        <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                                     Glyph="&#xE8F4;"
                                                                     FontSize="24"
                                                                     Foreground="ForestGreen"
                                                                     Margin="0,0,12,0"/>
                                                        <TextBlock Text="Kế hoạch cai thuốc"
                                                                   Style="{StaticResource SectionHeaderStyle}"
                                                                   Margin="0"/>
                                                </StackPanel>

                                                <TextBlock Text="Ngày bắt đầu cai thuốc *"
                                                           Style="{StaticResource FormLabelStyle}"/>
                                                <DatePicker SelectedDate="{Binding QuitStartDate}"
                                                            Style="{StaticResource FormDatePickerStyle}"/>

                                                <TextBlock Text="Ngày mục tiêu hoàn thành"
                                                           Style="{StaticResource FormLabelStyle}"/>
                                                <DatePicker SelectedDate="{Binding QuitGoalDate}"
                                                            Style="{StaticResource FormDatePickerStyle}"/>
                                        </StackPanel>
                                </Border>
                        </Grid>

                        <!-- Smoking Information -->
                        <Border Style="{StaticResource ProfileCardStyle}">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,0,20">
                                                <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                             Glyph="&#xE7BA;"
                                                             FontSize="24"
                                                             Foreground="Crimson"
                                                             Margin="0,0,12,0"/>
                                                <TextBlock Text="Thông tin hút thuốc"
                                                           Style="{StaticResource SectionHeaderStyle}"
                                                           Foreground="Crimson"
                                                           Margin="0"/>
                                        </StackPanel>

                                        <Grid>
                                                <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0"
                                                            Margin="0,0,12,0">
                                                        <TextBlock Text="Số điếu mỗi ngày *"
                                                                   Style="{StaticResource FormLabelStyle}"/>
                                                        <ui:NumberBox Value="{Binding CigarettesPerDay}"
                                                                      Minimum="1"
                                                                      Maximum="100"
                                                                      Style="{StaticResource FormNumberBoxStyle}"/>

                                                        <TextBlock Text="Giá 1 gói thuốc (VNĐ) *"
                                                                   Style="{StaticResource FormLabelStyle}"/>
                                                        <ui:NumberBox Value="{Binding PricePerPack}"
                                                                      Minimum="1000"
                                                                      Style="{StaticResource FormNumberBoxStyle}"/>

                                                        <TextBlock Text="Số điếu/gói *"
                                                                   Style="{StaticResource FormLabelStyle}"/>
                                                        <ui:NumberBox Value="{Binding CigarettesPerPack}"
                                                                      Minimum="1"
                                                                      Maximum="50"
                                                                      Style="{StaticResource FormNumberBoxStyle}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1"
                                                            Margin="12,0,0,0">
                                                        <TextBlock Text="Số năm đã hút"
                                                                   Style="{StaticResource FormLabelStyle}"/>
                                                        <ui:NumberBox Value="{Binding SmokingYears}"
                                                                      Minimum="0"
                                                                      Maximum="80"
                                                                      Style="{StaticResource FormNumberBoxStyle}"/>

                                                        <TextBlock Text="Lý do muốn cai thuốc"
                                                                   Style="{StaticResource FormLabelStyle}"/>
                                                        <TextBox Text="{Binding QuitReason, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"
                                                                 Height="100"
                                                                 TextWrapping="Wrap"
                                                                 AcceptsReturn="True"
                                                                 ui:ControlHelper.PlaceholderText="Ví dụ: Để có sức khỏe tốt hơn, tiết kiệm tiền..."/>
                                                </StackPanel>
                                        </Grid>
                                </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,40">
                                <Button Content="💾 Lưu thay đổi"
                                        Background="ForestGreen"
                                        Foreground="White"
                                        BorderBrush="ForestGreen"
                                        Padding="24,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Margin="0,0,16,0"
                                        Cursor="Hand"
                                        Command="{Binding SaveCommand}">
                                        <Button.Style>
                                                <Style TargetType="Button">
                                                        <Setter Property="IsEnabled"
                                                                Value="True"/>
                                                        <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLoading}"
                                                                             Value="True">
                                                                        <Setter Property="IsEnabled"
                                                                                Value="False"/>
                                                                </DataTrigger>
                                                        </Style.Triggers>
                                                </Style>
                                        </Button.Style>
                                </Button>

                                <Button Content="↶ Hủy thay đổi"
                                        Background="Transparent"
                                        Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                        Padding="24,12"
                                        FontSize="16"
                                        Cursor="Hand"
                                        Command="{Binding CancelCommand}"
                                        IsEnabled="{Binding HasChanges}"/>
                        </StackPanel>

                        <!-- Loading Indicator -->
                        <ui:ProgressRing IsActive="{Binding IsLoading}"
                                         Margin="0,20,0,0"
                                         HorizontalAlignment="Center"/>
                </StackPanel>
        </ScrollViewer>
</UserControl>
