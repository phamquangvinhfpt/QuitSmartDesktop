<UserControl x:Class="QuitSmartApp.Views.HealthInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="ForestGreen"/>
            <Setter Property="Margin" Value="0,16,0,16"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel MaxWidth="1000" Margin="40,20">
            
            <!-- Header -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="💊 Thông tin sức khỏe"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="ForestGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Tìm hiểu về tác hại của thuốc lá và lợi ích của việc cai thuốc"
                           FontSize="16"
                           Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ui:ProgressRing IsActive="{Binding IsLoading}"
                           Margin="0,20,0,20"
                           HorizontalAlignment="Center"/>

            <!-- Content -->
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>>
                
                <!-- Smoking Effects Section -->
                <TextBlock Text="🚫 Tác hại của thuốc lá"
                          Style="{StaticResource SectionHeaderStyle}"/>

                <ItemsControl ItemsSource="{Binding SmokeEffects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource InfoCardStyle}" Margin="0,8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="Crimson"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Content}"
                                             FontSize="14"
                                             Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                             TextWrapping="Wrap"
                                             LineHeight="20"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Quit Benefits Section -->
                <TextBlock Text="✅ Lợi ích khi cai thuốc"
                          Style="{StaticResource SectionHeaderStyle}"/>

                <ItemsControl ItemsSource="{Binding QuitBenefits}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource InfoCardStyle}" Margin="0,8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="ForestGreen"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Content}"
                                             FontSize="14"
                                             Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                             TextWrapping="Wrap"
                                             LineHeight="20"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Health Tips Section -->
                <TextBlock Text="💡 Mẹo sức khỏe"
                          Style="{StaticResource SectionHeaderStyle}"/>

                <ItemsControl ItemsSource="{Binding HealthTips}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource InfoCardStyle}" Margin="0,8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="DodgerBlue"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Content}"
                                             FontSize="14"
                                             Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                             TextWrapping="Wrap"
                                             LineHeight="20"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
