                                                                            Value="Crimson"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <TextBlock Text=" â€¢ "
                                                           FontSize="14"
                                                           Foreground="DarkSlateGray"
                                                           Margin="8,0"/>

                                                <TextBlock Text="{Binding HealthStatus}"
                                                           FontSize="14"
                                                           Foreground="DarkSlateGray"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding Notes}"
                                                       FontSize="12"
                                                       Foreground="DarkSlateGray"
                                                       TextWrapping="Wrap"
                                                       MaxWidth="400">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility"
                                                                Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Notes}"
                                                                         Value="{x:Null}">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Notes}"
                                                                         Value="">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ui:ItemsRepeater.ItemTemplate>
                    </ui:ItemsRepeater>
                </StackPanel>
            </Border>

            <!-- Loading Indicator -->
            <ui:ProgressRing IsActive="{Binding IsLoading}"
                             Margin="0,20,0,0"
                             HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
