                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="TÃ¬nh tráº¡ng sá»©c khá»e hÃ´m nay?"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                   Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="ðŸ˜Š Tá»‘t"
                                         Foreground="ForestGreen"
                                         GroupName="HealthStatus"
                                         Tag="Good">
                                <RadioButton.Style>
                                    <Style TargetType="RadioButton"
                                           BasedOn="{StaticResource HealthStatusRadioStyle}">
                                        <Setter Property="IsChecked"
                                                Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HealthStatus}"
                                                         Value="Good">
                                                <Setter Property="IsChecked"
                                                        Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RadioButton.Style>
                            </RadioButton>
                            <RadioButton Content="ðŸ˜ Trung bÃ¬nh"
                                         Foreground="Orange"
                                         GroupName="HealthStatus"
                                         Tag="Average">
                                <RadioButton.Style>
                                    <Style TargetType="RadioButton"
                                           BasedOn="{StaticResource HealthStatusRadioStyle}">
                                        <Setter Property="IsChecked"
                                                Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HealthStatus}"
                                                         Value="Average">
                                                <Setter Property="IsChecked"
                                                        Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RadioButton.Style>
                            </RadioButton>
                            <RadioButton Content="ðŸ˜ž KÃ©m"
                                         Foreground="Crimson"
                                         GroupName="HealthStatus"
                                         Tag="Poor">
                                <RadioButton.Style>
                                    <Style TargetType="RadioButton"
                                           BasedOn="{StaticResource HealthStatusRadioStyle}">
                                        <Setter Property="IsChecked"
                                                Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HealthStatus}"
                                                         Value="Poor">
                                                <Setter Property="IsChecked"
                                                        Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RadioButton.Style>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Ghi chÃº (tÃ¹y chá»n)"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                   Margin="0,0,0,12"/>

                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 ui:ControlHelper.PlaceholderText="Ghi láº¡i cáº£m xÃºc, tÃ¢m tráº¡ng hoáº·c nhá»¯ng gÃ¬ Ä‘áº·c biá»‡t trong ngÃ y..."
                                 FontSize="14"
                                 Padding="12"/>
                    </StackPanel>

                    <!-- Save Button -->
                    <Button Content="ðŸ’¾ LÆ°u nháº­t kÃ½"
                            Background="ForestGreen"
                            Foreground="White"
                            BorderBrush="ForestGreen"
                            Padding="24,12"
                            FontSize="16"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Command="{Binding SaveLogCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="IsEnabled"
                                        Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Recent Logs -->
            <Border Style="{StaticResource TrackingCardStyle}">
                <StackPanel>
                    <TextBlock Text="Nháº­t kÃ½ gáº§n Ä‘Ã¢y"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="ForestGreen"
                               Margin="0,0,0,16"/>

                    <ui:ItemsRepeater ItemsSource="{Binding RecentLogs}">
                        <ui:ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Style>
                                        <Style TargetType="Border"
                                               BasedOn="{StaticResource LogHistoryItemStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasSmoked}"
                                                             Value="True">
                                                    <Setter Property="Background"
                                                            Value="MistyRose"/>
                                                    <Setter Property="BorderBrush"
                                                            Value="Crimson"/>
                                                    <Setter Property="BorderThickness"
                                                            Value="1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Margin="0,0,16,0">
                                            <TextBlock Text="{Binding LogDate, StringFormat='dd/MM'}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="DarkSlateGray"/>
                                            <TextBlock Text="{Binding LogDate, StringFormat='dddd'}"
                                                       FontSize="12"
                                                       Foreground="DarkSlateGray"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,4">
                                                <TextBlock FontSize="14">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text"
                                                                    Value="ðŸš­ KhÃ´ng hÃºt thuá»‘c"/>
                                                            <Setter Property="Foreground"
                                                                    Value="ForestGreen"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding HasSmoked}"
                                                                             Value="True">
                                                                    <Setter Property="Text"
                                                                            Value="ðŸš¬ CÃ³ hÃºt thuá»‘c"/>
