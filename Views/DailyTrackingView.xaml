<UserControl x:Class="QuitSmartApp.Views.DailyTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

    <UserControl.Resources>
        <Style x:Key="BackButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{DynamicResource QuitSmartPrimaryBrush}"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="{DynamicResource QuitSmartSecondaryBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TrackingCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="8"/>
            <Setter Property="Padding"
                    Value="24"/>
            <Setter Property="Margin"
                    Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray"
                                      Direction="270"
                                      ShadowDepth="2"
                                      BlurRadius="8"
                                      Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DateNavigationButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderBrush"
                    Value="ForestGreen"/>
            <Setter Property="Foreground"
                    Value="ForestGreen"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="Margin"
                    Value="8,0"/>
        </Style>

        <Style x:Key="HealthStatusRadioStyle"
               TargetType="RadioButton">
            <Setter Property="Margin"
                    Value="0,0,20,0"/>
            <Setter Property="FontSize"
                    Value="14"/>
        </Style>

        <Style x:Key="LogHistoryItemStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="LightGreen"/>
            <Setter Property="CornerRadius"
                    Value="4"/>
            <Setter Property="Padding"
                    Value="16,12"/>
            <Setter Property="Margin"
                    Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SmokedLogItemStyle"
               TargetType="Border"
               BasedOn="{StaticResource LogHistoryItemStyle}">
            <Setter Property="Background"
                    Value="MistyRose"/>
            <Setter Property="BorderBrush"
                    Value="Crimson"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel MaxWidth="1000"
                    Margin="32,20">

            <!-- Header vá»›i Back Button -->
            <Grid Margin="0,0,0,24">
                <Button Content="â† Quay láº¡i"
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding BackCommand}"/>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0">
                    <TextBlock Text="ðŸ“ Nháº­t kÃ½ hÃ ng ngÃ y"
                               FontSize="32"
                               FontWeight="Light"
                               Foreground="{DynamicResource QuitSmartSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Ghi láº¡i hÃ nh trÃ¬nh cai thuá»‘c cá»§a báº¡n má»—i ngÃ y"
                               FontSize="16"
                               Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Success/Error Messages -->
            <TextBlock Text="{Binding SuccessMessage}"
                       Foreground="ForestGreen"
                       FontSize="14"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility"
                                Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SuccessMessage}"
                                         Value="{x:Null}">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SuccessMessage}"
                                         Value="">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Crimson"
                       FontSize="14"
                       Margin="0,0,0,16"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility"
                                Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ErrorMessage}"
                                         Value="{x:Null}">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ErrorMessage}"
                                         Value="">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Date Navigation -->
            <Border Style="{StaticResource TrackingCardStyle}">
                <StackPanel>
                    <TextBlock Text="Chá»n ngÃ y"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="ForestGreen"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16">
                        <Button Content="â† HÃ´m qua"
                                Style="{StaticResource DateNavigationButtonStyle}"
                                Cursor="Hand"
                                Command="{Binding PreviousDayCommand}"/>

                        <Border Background="ForestGreen"
                                CornerRadius="4"
                                Padding="16,8"
                                Margin="8,0">
                            <TextBlock Text="{Binding SelectedDateDisplay}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <Button Content="HÃ´m sau â†’"
                                Style="{StaticResource DateNavigationButtonStyle}"
                                Cursor="Hand"
                                Command="{Binding NextDayCommand}"/>
