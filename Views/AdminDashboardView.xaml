                                Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
                        <Setter Property="Margin"
                                Value="0,8,0,4"/>
                </Style>

                <Style x:Key="StatLabelStyle"
                       TargetType="TextBlock">
