                                Value="14"/>
                        <Setter Property="FontWeight"
                                Value="Medium"/>
                        <Setter Property="Foreground"
                                Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Center"/>
