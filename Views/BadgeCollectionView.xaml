<UserControl x:Class="QuitSmartApp.Views.BadgeCollectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="BadgeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EarnedBadgeStyle" TargetType="Border" BasedOn="{StaticResource BadgeCardStyle}">
            <Setter Property="Background" Value="LightGreen"/>
            <Setter Property="BorderBrush" Value="ForestGreen"/>
        </Style>

        <Style x:Key="LockedBadgeStyle" TargetType="Border" BasedOn="{StaticResource BadgeCardStyle}">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel MaxWidth="1000" Margin="40,20">
            
            <!-- Header -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="🏆 Bộ sưu tập huy hiệu của tôi"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="ForestGreen"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Thành tích bạn đã đạt được trong hành trình cai thuốc lá"
                           FontSize="16"
                           Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ui:ProgressRing IsActive="{Binding IsLoading}"
                           Margin="0,20,0,20"
                           HorizontalAlignment="Center"/>

            <!-- Content -->
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                
                <!-- Earned Badges Section -->
                <TextBlock Text="Huy hiệu đã đạt được"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="ForestGreen"
                          Margin="0,0,0,16"/>

                <ItemsControl ItemsSource="{Binding UserBadges}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EarnedBadgeStyle}" Width="200" Height="180">
                                <StackPanel>
                                    <TextBlock Text="{Binding BadgeDefinition.Icon}"
                                             FontSize="36"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding BadgeDefinition.Name}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="DarkSlateGray"
                                             TextAlignment="Center"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding BadgeDefinition.Description}"
                                             FontSize="12"
                                             Foreground="DarkSlateGray"
                                             TextAlignment="Center"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,8"/>
                                    <TextBlock FontSize="11"
                                             Foreground="DarkSlateGray"
                                             TextAlignment="Center">
                                        <Run Text="Đạt được ngày:"/>
                                        <Run Text="{Binding EarnedAt, StringFormat=dd/MM/yyyy}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Available Badges Section -->
                <TextBlock Text="Huy hiệu có thể đạt được"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                          Margin="0,32,0,16"/>

                <ItemsControl ItemsSource="{Binding AvailableBadges}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource LockedBadgeStyle}" Width="200" Height="180">
                                <StackPanel>
                                    <TextBlock Text="🔒"
                                             FontSize="36"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding Name}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="Gray"
                                             TextAlignment="Center"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Description}"
                                             FontSize="12"
                                             Foreground="Gray"
                                             TextAlignment="Center"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding RequirementDescription}"
                                             FontSize="11"
                                             Foreground="Gray"
                                             TextAlignment="Center"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
