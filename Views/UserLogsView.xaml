<UserControl x:Class="QuitSmartApp.Views.UserLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:QuitSmartApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToSmokeStatusConverter x:Key="BoolToSmokeStatusConverter"/>
        <converters:BoolToSmokeColorConverter x:Key="BoolToSmokeColorConverter"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="LogCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderBrush"
                    Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="8"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray"
                                      Direction="270"
                                      ShadowDepth="2"
                                      BlurRadius="8"
                                      Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Foreground"
                    Value="#2C3E50"/>
            <Setter Property="Margin"
                    Value="0,0,0,20"/>
        </Style>

        <Style x:Key="DateTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Foreground"
                    Value="#3498DB"/>
        </Style>

        <Style x:Key="StatusTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Margin"
                    Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer>
            <StackPanel MaxWidth="800"
                        Margin="24,20">

                <!-- Header -->
                <StackPanel Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16">
                        <TextBlock Text="📋"
                                   FontSize="32"
                                   Margin="0,0,16,0"/>
                        <TextBlock Text="Nhật Ký Hoạt Động"
                                   Style="{StaticResource HeaderTextStyle}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="{Binding SelectedUser.FullName, StringFormat='Nhật ký của: {0}'}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Foreground="#7F8C8D"
                               Margin="0,0,0,16"/>

                    <Button Content="← Quay lại Dashboard"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="12,8"
                            FontSize="14"
                            HorizontalAlignment="Center"
                            Command="{Binding BackToDashboardCommand}"/>
                </StackPanel>

                <!-- Filter and Search -->
                <Border Style="{StaticResource LogCardStyle}"
                        Margin="8,0,8,16">
                    <StackPanel>
                        <TextBlock Text="🔍 Lọc và Tìm kiếm"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#9B59B6"
                                   Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0"
                                  Margin="0,0,8,0">
                                <TextBox Name="SearchTextBox"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="Tìm kiếm trong ghi chú..."
                                           Foreground="#999999"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=SearchTextBox, Path=Text}"
                                                             Value="">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <DatePicker Grid.Column="1"
                                        SelectedDate="{Binding FilterStartDate}"
                                        Margin="0,0,8,0"/>

                            <DatePicker Grid.Column="2"
                                        SelectedDate="{Binding FilterEndDate}"
                                        Margin="0,0,8,0"/>

                            <Button Grid.Column="3"
                                    Content="Làm mới"
                                    Background="#27AE60"
                                    Foreground="White"
                                    Padding="12,6"
                                    Command="{Binding RefreshLogsCommand}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Statistics Summary -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Style="{StaticResource LogCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📊"
                                       FontSize="24"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalLogEntries}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#3498DB"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tổng bản ghi"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            Style="{StaticResource LogCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="✅"
                                       FontSize="24"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding SuccessfulDays}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Ngày thành công"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2"
                            Style="{StaticResource LogCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="❌"
                                       FontSize="24"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FailedDays}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E74C3C"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Ngày thất bại"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3"
                            Style="{StaticResource LogCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📈"
                                       FontSize="24"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding SuccessRate, StringFormat='{}{0:F1}%'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#F39C12"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tỷ lệ thành công"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Logs List -->
                <Border Style="{StaticResource LogCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📝 Chi Tiết Nhật Ký"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,16"/>

                        <ScrollViewer MaxHeight="400">
                            <ItemsControl ItemsSource="{Binding UserDailyLogs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                                                CornerRadius="6"
                                                Padding="12"
                                                Margin="0,0,0,8"
                                                BorderThickness="1"
                                                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Date -->
                                                <StackPanel Grid.Column="0"
                                                            Margin="0,0,16,0">
                                                    <TextBlock Text="{Binding LogDate, StringFormat='dd/MM/yyyy'}"
                                                               Style="{StaticResource DateTextStyle}"/>
                                                    <TextBlock Text="{Binding LogDate, StringFormat='dddd'}"
                                                               FontSize="10"
                                                               Foreground="#95A5A6"/>
                                                </StackPanel>

                                                <!-- Content -->
                                                <StackPanel Grid.Column="1">
                                                    <StackPanel Orientation="Horizontal"
                                                                Margin="0,0,0,4">
                                                        <TextBlock Text="Trạng thái hút thuốc: "
                                                                   FontSize="12"/>
                                                        <TextBlock Text="{Binding HasSmoked, Converter={StaticResource BoolToSmokeStatusConverter}}"
                                                                   FontWeight="Bold"
                                                                   Foreground="{Binding HasSmoked, Converter={StaticResource BoolToSmokeColorConverter}}"/>
                                                    </StackPanel>

                                                    <TextBlock Text="{Binding HealthStatus, StringFormat='Tình trạng sức khỏe: {0}'}"
                                                               FontSize="12"
                                                               Margin="0,0,0,4"
                                                               Visibility="{Binding HealthStatus, Converter={StaticResource StringToVisibilityConverter}}"/>

                                                    <TextBlock Text="{Binding Notes, StringFormat='Ghi chú: {0}'}"
                                                               FontSize="12"
                                                               FontStyle="Italic"
                                                               Foreground="#7F8C8D"
                                                               TextWrapping="Wrap"
                                                               Visibility="{Binding Notes, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>

                                                <!-- Status Icon -->
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding HasSmoked, Converter={StaticResource BoolToIconConverter}}"
                                                           FontSize="20"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Load More Button -->
                        <Button Content="📄 Tải thêm bản ghi"
                                Background="#95A5A6"
                                Foreground="White"
                                Padding="12,8"
                                FontSize="14"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0"
                                Command="{Binding LoadMoreLogsCommand}"
                                Visibility="{Binding HasMoreLogs, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button Content="📊 Xem chi tiết"
                            Background="#3498DB"
                            Foreground="White"
                            Padding="16,8"
                            FontSize="14"
                            Margin="0,0,12,0"
                            Command="{Binding ViewUserDetailsCommand}"/>
                    <Button Content="📝 Chỉnh sửa"
                            Background="#27AE60"
                            Foreground="White"
                            Padding="16,8"
                            FontSize="14"
                            Margin="0,0,12,0"
                            Command="{Binding EditUserCommand}"/>
                    <Button Content="📈 Xuất báo cáo"
                            Background="#F39C12"
                            Foreground="White"
                            Padding="16,8"
                            FontSize="14"
                            Command="{Binding ExportLogsCommand}"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 