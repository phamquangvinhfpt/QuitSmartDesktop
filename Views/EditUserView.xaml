<UserControl x:Class="QuitSmartApp.Views.EditUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:QuitSmartApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

        <UserControl.Resources>
                <!-- Converters -->
                <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
                <converters:MoneyFormatConverter x:Key="MoneyFormatConverter"/>
                <converters:DateFormatConverter x:Key="DateFormatConverter"/>
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

                <Style x:Key="EditCardStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="12"/>
                        <Setter Property="Padding"
                                Value="24"/>
                        <Setter Property="Margin"
                                Value="8"/>
                        <Setter Property="Effect">
                                <Setter.Value>
                                        <DropShadowEffect Color="Gray"
                                                          Direction="270"
                                                          ShadowDepth="3"
                                                          BlurRadius="10"
                                                          Opacity="0.3"/>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="HeaderTextStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="24"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Foreground"
                                Value="#2C3E50"/>
                        <Setter Property="Margin"
                                Value="0,0,0,20"/>
                </Style>

                <Style x:Key="FieldLabelStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="FontWeight"
                                Value="Medium"/>
                        <Setter Property="Foreground"
                                Value="#2C3E50"/>
                        <Setter Property="Margin"
                                Value="0,12,0,6"/>
                </Style>

                <Style x:Key="FormTextBoxStyle"
                       TargetType="TextBox">
                        <Setter Property="Padding"
                                Value="12,8"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="BorderBrush"
                                Value="#BDC3C7"/>
                        <Setter Property="Background"
                                Value="White"/>
                        <Setter Property="Margin"
                                Value="0,0,0,8"/>
                </Style>

                <Style x:Key="FormComboBoxStyle"
                       TargetType="ComboBox">
                        <Setter Property="Padding"
                                Value="12,8"/>
                        <Setter Property="FontSize"
                                Value="14"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="BorderBrush"
                                Value="#BDC3C7"/>
                        <Setter Property="Background"
                                Value="White"/>
                        <Setter Property="Margin"
                                Value="0,0,0,8"/>
                </Style>
        </UserControl.Resources>

        <Grid>
                <ScrollViewer>
                        <StackPanel MaxWidth="800"
                                    Margin="24,20">

                                <!-- Header -->
                                <StackPanel Margin="0,0,0,24">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,16">
                                                <TextBlock Text="✏️"
                                                           FontSize="32"
                                                           Margin="0,0,16,0"/>
                                                <TextBlock Text="Chỉnh Sửa Người Dùng"
                                                           Style="{StaticResource HeaderTextStyle}"
                                                           VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding SelectedUser.FullName, StringFormat='Đang chỉnh sửa: {0}'}"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#7F8C8D"
                                                   Margin="0,0,0,16"/>

                                        <Button Content="← Quay lại Dashboard"
                                                Background="#3498DB"
                                                Foreground="White"
                                                Padding="12,8"
                                                FontSize="14"
                                                HorizontalAlignment="Center"
                                                Command="{Binding BackToDashboardCommand}"/>
                                </StackPanel>

                                <!-- Edit Form -->
                                <Border Style="{StaticResource EditCardStyle}">
                                        <Grid>
                                                <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Left Column -->
                                                <StackPanel Grid.Column="0"
                                                            Margin="0,0,12,0">
                                                        <TextBlock Text="📝 Thông Tin Cơ Bản"
                                                                   FontSize="18"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#3498DB"
                                                                   Margin="0,0,0,16"/>

                                                        <TextBlock Text="Họ và tên *"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditFullName, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"/>

                                                        <TextBlock Text="Tên đăng nhập *"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditUsername, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"/>

                                                        <TextBlock Text="Email *"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditEmail, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"/>

                                                        <TextBlock Text="Giới tính"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <ComboBox SelectedValue="{Binding EditGender}"
                                                                  Style="{StaticResource FormComboBoxStyle}">
                                                                <ComboBoxItem Content="Nam"
                                                                              Tag="Nam"/>
                                                                <ComboBoxItem Content="Nữ"
                                                                              Tag="Nữ"/>
                                                                <ComboBoxItem Content="Khác"
                                                                              Tag="Khác"/>
                                                        </ComboBox>

                                                        <TextBlock Text="Trạng thái tài khoản"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <CheckBox Content="Tài khoản đang hoạt động"
                                                                  IsChecked="{Binding EditIsActive}"
                                                                  FontSize="14"
                                                                  Margin="0,6,0,12"/>
                                                </StackPanel>

                                                <!-- Right Column -->
                                                <StackPanel Grid.Column="1"
                                                            Margin="12,0,0,0">
                                                        <TextBlock Text="🚭 Thông Tin Cai Thuốc"
                                                                   FontSize="18"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#E74C3C"
                                                                   Margin="0,0,0,16"/>

                                                        <TextBlock Text="Ngày bắt đầu cai thuốc"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <DatePicker SelectedDate="{Binding EditQuitStartDate}"
                                                                    FontSize="14"
                                                                    Margin="0,0,0,8"/>

                                                        <TextBlock Text="Số ngày đã cai (chỉ đọc)"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditTotalDaysQuit}"
                                                                 Style="{StaticResource FormTextBoxStyle}"
                                                                 IsReadOnly="True"
                                                                 Background="#ECF0F1"/>

                                                        <TextBlock Text="Tiền tiết kiệm được (VNĐ)"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditTotalMoneySaved, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"/>

                                                        <TextBlock Text="Chuỗi ngày hiện tại"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditCurrentStreak, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"/>

                                                        <TextBlock Text="Chuỗi ngày dài nhất"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditLongestStreak, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource FormTextBoxStyle}"/>

                                                        <TextBlock Text="Số huy hiệu (chỉ đọc)"
                                                                   Style="{StaticResource FieldLabelStyle}"/>
                                                        <TextBox Text="{Binding EditTotalBadges}"
                                                                 Style="{StaticResource FormTextBoxStyle}"
                                                                 IsReadOnly="True"
                                                                 Background="#ECF0F1"/>
                                                </StackPanel>
                                        </Grid>
                                </Border>

                                <!-- Notes Section -->
                                <Border Style="{StaticResource EditCardStyle}">
                                        <StackPanel>
                                                <TextBlock Text="📋 Ghi Chú Quản Trị"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="#9B59B6"
                                                           Margin="0,0,0,16"/>

                                                <TextBlock Text="Ghi chú của admin về người dùng này:"
                                                           Style="{StaticResource FieldLabelStyle}"/>
                                                <TextBox Text="{Binding EditAdminNotes, UpdateSourceTrigger=PropertyChanged}"
                                                         AcceptsReturn="True"
                                                         TextWrapping="Wrap"
                                                         Height="80"
                                                         VerticalScrollBarVisibility="Auto"
                                                         Style="{StaticResource FormTextBoxStyle}"/>

                                                <TextBlock Text="Lý do chỉnh sửa *"
                                                           Style="{StaticResource FieldLabelStyle}"/>
                                                <TextBox Text="{Binding EditReason, UpdateSourceTrigger=PropertyChanged}"
                                                         AcceptsReturn="True"
                                                         TextWrapping="Wrap"
                                                         Height="60"
                                                         VerticalScrollBarVisibility="Auto"
                                                         Style="{StaticResource FormTextBoxStyle}"
                                                         Background="#FFF9E6"
                                                         BorderBrush="#F39C12"/>
                                        </StackPanel>
                                </Border>

                                <!-- Validation Summary -->
                                <Border Style="{StaticResource EditCardStyle}"
                                        Background="#FDF2F2"
                                        BorderBrush="#E74C3C"
                                        Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel>
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,8">
                                                        <TextBlock Text="⚠️"
                                                                   FontSize="16"
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock Text="Vui lòng sửa các lỗi sau:"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#E74C3C"/>
                                                </StackPanel>
                                                <ItemsControl ItemsSource="{Binding ValidationErrors}">
                                                        <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal"
                                                                                    Margin="16,2,0,2">
                                                                                <TextBlock Text="•"
                                                                                           Foreground="#E74C3C"
                                                                                           Margin="0,0,4,0"/>
                                                                                <TextBlock Text="{Binding}"
                                                                                           FontSize="12"
                                                                                           Foreground="#C0392B"/>
                                                                        </StackPanel>
                                                                </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                        </StackPanel>
                                </Border>

                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,24,0,0">
                                        <Button Content="💾 Lưu thay đổi"
                                                Background="#27AE60"
                                                Foreground="White"
                                                Padding="20,12"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Margin="0,0,16,0"
                                                Command="{Binding SaveUserEditCommand}"
                                                IsEnabled="{Binding CanSaveEdit}"/>

                                        <Button Content="🔄 Khôi phục"
                                                Background="#F39C12"
                                                Foreground="White"
                                                Padding="16,12"
                                                FontSize="14"
                                                Margin="0,0,16,0"
                                                Command="{Binding ResetEditFormCommand}"/>

                                        <Button Content="❌ Hủy bỏ"
                                                Background="#95A5A6"
                                                Foreground="White"
                                                Padding="16,12"
                                                FontSize="14"
                                                Command="{Binding CancelEditCommand}"/>
                                </StackPanel>

                                <!-- Required Fields Note -->
                                <TextBlock Text="* Các trường bắt buộc"
                                           FontSize="12"
                                           Foreground="#7F8C8D"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>

                        </StackPanel>
                </ScrollViewer>
        </Grid>
</UserControl> 