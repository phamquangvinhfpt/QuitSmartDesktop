<UserControl x:Class="QuitSmartApp.Views.UserStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1200"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Chart Converters -->
        <local:ChartBarWidthConverter xmlns:local="clr-namespace:QuitSmartApp.Converters"
                                      x:Key="ChartBarWidthConverter"/>
        <local:BooleanToColorConverter xmlns:local="clr-namespace:QuitSmartApp.Converters"
                                       x:Key="BooleanToColorConverter"/>
        <local:BooleanToBackgroundConverter xmlns:local="clr-namespace:QuitSmartApp.Converters"
                                            x:Key="BooleanToBackgroundConverter"/>
        <local:BoolToStatusConverter xmlns:local="clr-namespace:QuitSmartApp.Converters"
                                     x:Key="BoolToStatusConverter"/>
        <local:StringToVisibilityConverter xmlns:local="clr-namespace:QuitSmartApp.Converters"
                                           x:Key="StringToVisibilityConverter"/>

        <!-- Theme-aware Color Resources -->
        <SolidColorBrush x:Key="PrimaryBrush"
                         Color="#2E7D32"/>
        <SolidColorBrush x:Key="SuccessBrush"
                         Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningBrush"
                         Color="#FF9800"/>
        <SolidColorBrush x:Key="DangerBrush"
                         Color="#F44336"/>
        <SolidColorBrush x:Key="InfoBrush"
                         Color="#2196F3"/>
        <SolidColorBrush x:Key="ChartGridBrush"
                         Color="#E0E0E0"/>

        <!-- Styles -->
        <Style x:Key="BackButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Padding"
                    Value="16,8"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#388E3C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{DynamicResource SystemControlBackgroundListMediumBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="Margin"
                    Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray"
                                      Direction="270"
                                      ShadowDepth="4"
                                      BlurRadius="12"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChartCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{DynamicResource SystemControlBackgroundListMediumBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="24"/>
            <Setter Property="Margin"
                    Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray"
                                      Direction="270"
                                      ShadowDepth="4"
                                      BlurRadius="12"
                                      Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChartTitleStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Margin"
                    Value="0,0,0,16"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
        </Style>

        <Style x:Key="StatNumberStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="28"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
            <Setter Property="Margin"
                    Value="0,0,0,4"/>
        </Style>

        <Style x:Key="StatLabelStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="HorizontalAlignment"
                    Value="Center"/>
            <Setter Property="Opacity"
                    Value="0.8"/>
        </Style>

        <!-- New Chart Templates -->

        <!-- Radial Progress Template -->
        <DataTemplate x:Key="RadialProgressTemplate">
            <Grid Width="120"
                  Height="120">
                <Ellipse Fill="Transparent"
                         Stroke="#E0E0E0"
                         StrokeThickness="8"/>
                <Ellipse Fill="Transparent"
                         Stroke="{Binding Color}"
                         StrokeThickness="8"
                         StrokeDashArray="251.327"
                         StrokeDashOffset="{Binding ProgressOffset}"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-90"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayValue}"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{Binding Color}"/>
                    <TextBlock Text="{Binding Label}"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               Opacity="0.7"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- Pie Chart Segment Template -->
        <DataTemplate x:Key="PieSegmentTemplate">
            <Grid>
                <Path Fill="{Binding Color}"
                      Data="{Binding PathData}"
                      Stroke="White"
                      StrokeThickness="2"/>
                <TextBlock Text="{Binding DisplayValue}"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Canvas.Left="{Binding LabelX}"
                           Canvas.Top="{Binding LabelY}"/>
            </Grid>
        </DataTemplate>

        <!-- Doughnut Chart Template -->
        <DataTemplate x:Key="DoughnutSegmentTemplate">
            <Canvas>
                <Path Fill="{Binding Color}"
                      Data="{Binding PathData}"
                      Stroke="White"
                      StrokeThickness="3"/>
                <StackPanel Canvas.Left="{Binding LabelX}"
                            Canvas.Top="{Binding LabelY}"
                            Background="White"
                            Margin="4,2">
                    <TextBlock Text="{Binding Label}"
                               FontSize="10"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DisplayValue}"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{Binding Color}"/>
                </StackPanel>
            </Canvas>
        </DataTemplate>

        <!-- Area Chart Template -->
        <DataTemplate x:Key="AreaChartTemplate">
            <Grid>
                <Path Fill="{Binding FillBrush}"
                      Data="{Binding AreaPath}"
                      Opacity="0.3"/>
                <Path Stroke="{Binding StrokeBrush}"
                      Data="{Binding LinePath}"
                      StrokeThickness="3"/>
                <ItemsControl ItemsSource="{Binding DataPoints}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left"
                                    Value="{Binding X}"/>
                            <Setter Property="Canvas.Top"
                                    Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="{Binding Color}"
                                     Margin="-4,-4,0,0">
                                <Ellipse.ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Label}"/>
                                        <TextBlock Text="{Binding DisplayValue}"/>
                                    </StackPanel>
                                </Ellipse.ToolTip>
                            </Ellipse>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Command="{Binding BackCommand}"
                    Style="{StaticResource BackButtonStyle}">
                ← Quay lại
            </Button>

            <TextBlock Grid.Column="1"
                       Text="📊 Thống Kê Chi Tiết"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource PrimaryBrush}"/>

            <Button Grid.Column="2"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource BackButtonStyle}"
                    Background="{StaticResource InfoBrush}">
                🔄 Làm mới
            </Button>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <Grid>
                <!-- Loading Indicator -->
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True"
                                 Width="200"
                                 Height="4"
                                 Margin="0,0,0,10"/>
                    <TextBlock Text="Đang tải dữ liệu..."
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Opacity="0.7"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="16"
                           Foreground="{StaticResource DangerBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Main Content -->
                <StackPanel Margin="20">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}"
                                             Value="True">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <!-- Summary Statistics -->
                    <TextBlock Text="📈 Tổng Quan"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalDaysTracked}"
                                           Style="{StaticResource StatNumberStyle}"
                                           Foreground="{StaticResource InfoBrush}"/>
                                <TextBlock Text="Ngày theo dõi"
                                           Style="{StaticResource StatLabelStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding OverallSuccessRate, StringFormat='{}{0:F1}%'}"
                                           Style="{StaticResource StatNumberStyle}"
                                           Foreground="{StaticResource SuccessBrush}"/>
                                <TextBlock Text="Tỷ lệ thành công"
                                           Style="{StaticResource StatLabelStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2"
                                Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentStreak}"
                                           Style="{StaticResource StatNumberStyle}"
                                           Foreground="{StaticResource WarningBrush}"/>
                                <TextBlock Text="Chuỗi hiện tại"
                                           Style="{StaticResource StatLabelStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3"
                                Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalMoneySaved, StringFormat='{}{0:C0}'}"
                                           Style="{StaticResource StatNumberStyle}"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                                <TextBlock Text="Tiền đã tiết kiệm"
                                           Style="{StaticResource StatLabelStyle}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Charts Section -->
                    <TextBlock Text="📊 Biểu Đồ Phân Tích"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Margin="0,32,0,16"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <!-- First Row of Charts: Radial Progress and Pie Chart -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Radial Progress Charts -->
                        <Border Grid.Column="0"
                                Style="{StaticResource ChartCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🎯 Tiến Độ Thành Tích"
                                           Style="{StaticResource ChartTitleStyle}"
                                           Foreground="{StaticResource SuccessBrush}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Success Rate Radial -->
                                    <Grid Grid.Column="0"
                                          Margin="10">
                                        <Ellipse Fill="Transparent"
                                                 Stroke="#E0E0E0"
                                                 StrokeThickness="12"
                                                 Width="100"
                                                 Height="100"/>
                                        <Ellipse Fill="Transparent"
                                                 Stroke="{StaticResource SuccessBrush}"
                                                 StrokeThickness="12"
                                                 Width="100"
                                                 Height="100"
                                                 StrokeDashArray="314.159"
                                                 StrokeDashOffset="{Binding SuccessRateOffset}"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform Angle="-90"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding OverallSuccessRate, StringFormat='{}{0:F0}%'}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{StaticResource SuccessBrush}"/>
                                            <TextBlock Text="Thành công"
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Current Streak Radial -->
                                    <Grid Grid.Column="1"
                                          Margin="10">
                                        <Ellipse Fill="Transparent"
                                                 Stroke="#E0E0E0"
                                                 StrokeThickness="12"
                                                 Width="100"
                                                 Height="100"/>
                                        <Ellipse Fill="Transparent"
                                                 Stroke="{StaticResource WarningBrush}"
                                                 StrokeThickness="12"
                                                 Width="100"
                                                 Height="100"
                                                 StrokeDashArray="314.159"
                                                 StrokeDashOffset="{Binding StreakProgressOffset}"
                                                 RenderTransformOrigin="0.5,0.5">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform Angle="-90"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentStreak}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{StaticResource WarningBrush}"/>
                                            <TextBlock Text="Chuỗi ngày"
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.7"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Pie Chart - Success vs Failed -->
                        <Border Grid.Column="1"
                                Style="{StaticResource ChartCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🍰 Tỷ Lệ Thành Công"
                                           Style="{StaticResource ChartTitleStyle}"
                                           Foreground="{StaticResource InfoBrush}"/>

                                <Grid HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="83*"/>
                                        <ColumnDefinition Width="17*"/>
                                    </Grid.ColumnDefinitions>
                                    <Canvas Width="250"
                                            Height="250"
                                            Grid.ColumnSpan="2">
                                        <!-- Success Pie Segment -->
                                        <Path Fill="{StaticResource SuccessBrush}"
                                              Data="{Binding SuccessPieSegment}"
                                              Stroke="White"
                                              StrokeThickness="3"/>
                                        <!-- Failed Pie Segment -->
                                        <Path Fill="{StaticResource DangerBrush}"
                                              Data="{Binding FailedPieSegment}"
                                              Stroke="White"
                                              StrokeThickness="3"/>
                                    </Canvas>

                                    <!-- Legend -->
                                    <StackPanel VerticalAlignment="Bottom"
                                                Margin="0,0,0,20"
                                                Grid.ColumnSpan="2">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,4">
                                            <Rectangle Width="12"
                                                       Height="12"
                                                       Fill="{StaticResource SuccessBrush}"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding SuccessfulDays, StringFormat='Thành công: {0} ngày'}"
                                                       FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,4">
                                            <Rectangle Width="12"
                                                       Height="12"
                                                       Fill="{StaticResource DangerBrush}"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding FailedDays, StringFormat='Thất bại: {0} ngày'}"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Second Row: Area Chart and Doughnut Chart -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Area Chart - Daily Progress -->
                        <Border Grid.Column="0"
                                Style="{StaticResource ChartCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📈 Tiến Độ Hàng Ngày (30 ngày gần nhất)"
                                           Style="{StaticResource ChartTitleStyle}"
                                           Foreground="{StaticResource PrimaryBrush}"/>

                                <Canvas Height="220"
                                        Background="Transparent"
                                        Margin="20,10">
                                    <!-- Grid Lines -->
                                    <Line X1="0"
                                          Y1="50"
                                          X2="500"
                                          Y2="50"
                                          Stroke="{StaticResource ChartGridBrush}"
                                          StrokeThickness="1"
                                          StrokeDashArray="5,5"/>
                                    <Line X1="0"
                                          Y1="100"
                                          X2="500"
                                          Y2="100"
                                          Stroke="{StaticResource ChartGridBrush}"
                                          StrokeThickness="1"
                                          StrokeDashArray="5,5"/>
                                    <Line X1="0"
                                          Y1="150"
                                          X2="500"
                                          Y2="150"
                                          Stroke="{StaticResource ChartGridBrush}"
                                          StrokeThickness="1"
                                          StrokeDashArray="5,5"/>
                                    <Line X1="0"
                                          Y1="200"
                                          X2="500"
                                          Y2="200"
                                          Stroke="{StaticResource ChartGridBrush}"
                                          StrokeThickness="1"
                                          StrokeDashArray="5,5"/>

                                    <!-- Area Path -->
                                    <Path Fill="{StaticResource SuccessBrush}"
                                          Data="{Binding DailyProgressAreaPath}"
                                          Opacity="0.3"/>

                                    <!-- Line Path -->
                                    <Path Stroke="{StaticResource SuccessBrush}"
                                          Data="{Binding DailyProgressLinePath}"
                                          StrokeThickness="3"/>

                                    <!-- Data Points -->
                                    <ItemsControl ItemsSource="{Binding DailyProgressLine}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="Canvas.Left"
                                                        Value="{Binding X}"/>
                                                <Setter Property="Canvas.Top"
                                                        Value="{Binding Y}"/>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Ellipse Width="8"
                                                         Height="8"
                                                         Margin="-4,-4,0,0">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="{Binding HasSmoked, Converter={StaticResource BooleanToColorConverter}}"/>
                                                    </Ellipse.Fill>
                                                    <Ellipse.ToolTip>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                                                            <TextBlock Text="{Binding HasSmoked, Converter={StaticResource BoolToStatusConverter}}"/>
                                                        </StackPanel>
                                                    </Ellipse.ToolTip>
                                                </Ellipse>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Y-axis Labels -->
                                    <TextBlock Text="Thành công"
                                               Canvas.Left="10"
                                               Canvas.Top="35"
                                               FontSize="12"
                                               Foreground="{StaticResource SuccessBrush}"/>
                                    <TextBlock Text="Trung bình"
                                               Canvas.Left="10"
                                               Canvas.Top="85"
                                               FontSize="12"
                                               Foreground="{StaticResource WarningBrush}"/>
                                    <TextBlock Text="Khó khăn"
                                               Canvas.Left="10"
                                               Canvas.Top="135"
                                               FontSize="12"
                                               Foreground="{StaticResource DangerBrush}"/>
                                    <TextBlock Text="Thất bại"
                                               Canvas.Left="10"
                                               Canvas.Top="185"
                                               FontSize="12"
                                               Foreground="{StaticResource DangerBrush}"/>
                                </Canvas>
                            </StackPanel>
                        </Border>

                        <!-- Doughnut Chart - Money Saved by Month -->
                        <Border Grid.Column="1"
                                Style="{StaticResource ChartCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🍩 Tiền Tiết Kiệm Theo Tháng"
                                           Style="{StaticResource ChartTitleStyle}"
                                           Foreground="{StaticResource InfoBrush}"/>

                                <Grid HorizontalAlignment="Center">
                                    <Canvas Width="180"
                                            Height="180">
                                        <!-- Doughnut segments will be generated by code-behind -->
                                        <ItemsControl ItemsSource="{Binding MonthlyMoneySaved}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <Canvas/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Path Fill="{Binding Color}"
                                                          Data="{Binding DoughnutPath}"
                                                          Stroke="White"
                                                          StrokeThickness="2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Canvas>

                                    <!-- Center Content -->
                                    <StackPanel VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding TotalMoneySaved, StringFormat='{}{0:C0}'}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Tổng tiết kiệm"
                                                   FontSize="10"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.7"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Month Legend -->
                                <ItemsControl ItemsSource="{Binding MonthlyMoneySaved}"
                                              Margin="0,10,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,2"
                                                        HorizontalAlignment="Center">
                                                <Rectangle Width="10"
                                                           Height="10"
                                                           Fill="{Binding Color}"
                                                           Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding Label}"
                                                           FontSize="10"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding DisplayValue}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="{Binding Color}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Achievements & Milestones Section -->
                    <TextBlock Text="🏆 Thành Tích &amp; Cột Mốc"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Margin="0,32,0,16"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Achievements Cards -->
                        <Border Grid.Column="0"
                                Style="{StaticResource ChartCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🎖️ Huy Hiệu Đã Đạt"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,16"
