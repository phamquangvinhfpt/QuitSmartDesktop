<UserControl x:Class="QuitSmartApp.Views.GuestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="900"
             Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">

        <UserControl.Resources>
                <Style x:Key="HeroCardStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="ForestGreen"/>
                        <Setter Property="CornerRadius"
                                Value="12"/>
                        <Setter Property="Padding"
                                Value="40"/>
                        <Setter Property="Margin"
                                Value="0,0,0,32"/>
                </Style>

                <Style x:Key="InfoCardStyle"
                       TargetType="Border">
                        <Setter Property="Background"
                                Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="CornerRadius"
                                Value="8"/>
                        <Setter Property="Padding"
                                Value="24"/>
                        <Setter Property="Margin"
                                Value="8"/>
                        <Setter Property="Effect">
                                <Setter.Value>
                                        <DropShadowEffect Color="Gray"
                                                          Direction="270"
                                                          ShadowDepth="2"
                                                          BlurRadius="8"
                                                          Opacity="0.2"/>
                                </Setter.Value>
                        </Setter>
                </Style>

                <Style x:Key="SectionHeaderStyle"
                       TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="20"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Foreground"
                                Value="ForestGreen"/>
                        <Setter Property="Margin"
                                Value="0,0,0,16"/>
                </Style>
        </UserControl.Resources>

        <ScrollViewer>
                <StackPanel MaxWidth="1000"
                            Margin="40,20">

                        <!-- Hero Section -->
                        <Border Style="{StaticResource HeroCardStyle}">
                                <StackPanel HorizontalAlignment="Center">
                                        <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                     Glyph="&#xE8BC;"
                                                     FontSize="80"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,24"/>
                                        <TextBlock Text="QuitSmart"
                                                   FontSize="48"
                                                   FontWeight="Light"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>
                                        <TextBlock Text="Ứng dụng hỗ trợ cai thuốc lá thông minh"
                                                   FontSize="20"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,32"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <Button Content="🚀 Bắt đầu ngay"
                                                        Background="White"
                                                        Foreground="ForestGreen"
                                                        BorderBrush="White"
                                                        Padding="24,12"
                                                        FontSize="16"
                                                        FontWeight="SemiBold"
                                                        Margin="0,0,16,0"
                                                        Cursor="Hand"
                                                        Command="{Binding NavigateToRegisterCommand}"/>
                                                <Button Content="Đã có tài khoản"
                                                        Background="Transparent"
                                                        Foreground="White"
                                                        BorderBrush="White"
                                                        Padding="24,12"
                                                        FontSize="16"
                                                        Cursor="Hand"
                                                        Command="{Binding NavigateToLoginCommand}"/>
                                        </StackPanel>
                                </StackPanel>
                        </Border>

                        <!-- App Features Section -->
                        <TextBlock Text="✨ Tính năng nổi bật"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,0,0,32">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Style="{StaticResource InfoCardStyle}">
                                        <StackPanel>
                                                <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                             Glyph="&#xE8F4;"
                                                             FontSize="32"
                                                             Foreground="ForestGreen"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,0,0,16"/>
                                                <TextBlock Text="Theo dõi tiến trình"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="ForestGreen"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="Ghi lại hành trình cai thuốc hàng ngày và xem tiến trình phục hồi sức khỏe"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           LineHeight="20"/>
                                        </StackPanel>
                                </Border>

                                <Border Grid.Column="1"
                                        Style="{StaticResource InfoCardStyle}">
                                        <StackPanel>
                                                <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                             Glyph="&#xE734;"
                                                             FontSize="32"
                                                             Foreground="ForestGreen"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,0,0,16"/>
                                                <TextBlock Text="Huy hiệu thành tích"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="ForestGreen"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="Nhận huy hiệu khi đạt các cột mốc quan trọng trong hành trình cai thuốc"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           LineHeight="20"/>
                                        </StackPanel>
                                </Border>

                                <Border Grid.Column="2"
                                        Style="{StaticResource InfoCardStyle}">
                                        <StackPanel>
                                                <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                             Glyph="&#xE8D3;"
                                                             FontSize="32"
                                                             Foreground="ForestGreen"
                                                             HorizontalAlignment="Center"
                                                             Margin="0,0,0,16"/>
                                                <TextBlock Text="Tính tiền tiết kiệm"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="ForestGreen"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="Xem số tiền đã tiết kiệm được khi không mua thuốc lá"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           LineHeight="20"/>
                                        </StackPanel>
                                </Border>
                        </Grid>

                        <!-- Health Information Section -->
                        <TextBlock Text="📚 Thông tin hữu ích"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Smoke Effects -->
                        <Border Style="{StaticResource InfoCardStyle}"
                                Margin="8,0,8,16">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,0,16">
                                                <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                             Glyph="&#xE7BA;"
                                                             FontSize="24"
                                                             Foreground="Crimson"
                                                             Margin="0,0,12,0"/>
                                                <TextBlock Text="Tác hại của thuốc lá"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="Crimson"/>
                                        </StackPanel>

                                        <ui:ItemsRepeater ItemsSource="{Binding SmokeEffects}">
                                                <ui:ItemsRepeater.ItemTemplate>
                                                        <DataTemplate>
                                                                <Border Background="MistyRose"
                                                                        CornerRadius="4"
                                                                        Padding="16,12"
                                                                        Margin="0,0,0,8">
                                                                        <StackPanel>
                                                                                <TextBlock Text="{Binding Title}"
                                                                                           FontSize="14"
                                                                                           FontWeight="SemiBold"
                                                                                           Foreground="Crimson"
                                                                                           Margin="0,0,0,4"/>
                                                                                <TextBlock Text="{Binding Content}"
                                                                                           FontSize="13"
                                                                                           Foreground="DarkRed"
                                                                                           TextWrapping="Wrap"
                                                                                           LineHeight="18"/>
                                                                        </StackPanel>
                                                                </Border>
                                                        </DataTemplate>
                                                </ui:ItemsRepeater.ItemTemplate>
                                        </ui:ItemsRepeater>
                                </StackPanel>
                        </Border>

                        <!-- Quit Benefits -->
                        <Border Style="{StaticResource InfoCardStyle}"
                                Margin="8,0,8,16">
                                <StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,0,16">
                                                <ui:FontIcon FontFamily="Segoe MDL2 Assets"
                                                             Glyph="&#xE95E;"
                                                             FontSize="24"
                                                             Foreground="ForestGreen"
                                                             Margin="0,0,12,0"/>
                                                <TextBlock Text="Lợi ích khi cai thuốc"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="ForestGreen"/>
                                        </StackPanel>

                                        <ui:ItemsRepeater ItemsSource="{Binding QuitBenefits}">
                                                <ui:ItemsRepeater.ItemTemplate>
                                                        <DataTemplate>
                                                                <Border Background="LightGreen"
                                                                        CornerRadius="4"
                                                                        Padding="16,12"
                                                                        Margin="0,0,0,8">
                                                                        <StackPanel>
                                                                                <TextBlock Text="{Binding Title}"
                                                                                           FontSize="14"
                                                                                           FontWeight="SemiBold"
                                                                                           Foreground="DarkSlateGray"
                                                                                           Margin="0,0,0,4"/>
                                                                                <TextBlock Text="{Binding Content}"
                                                                                           FontSize="13"
                                                                                           Foreground="DarkSlateGray"
                                                                                           TextWrapping="Wrap"
                                                                                           LineHeight="18"/>
                                                                        </StackPanel>
                                                                </Border>
                                                        </DataTemplate>
                                                </ui:ItemsRepeater.ItemTemplate>
                                        </ui:ItemsRepeater>
                                </StackPanel>
                        </Border>

                        <!-- Call to Action -->
                        <Border Background="LightGreen"
                                CornerRadius="12"
                                Padding="32"
                                Margin="0,16,0,40">
                                <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="🌟 Sẵn sàng thay đổi cuộc sống?"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   Foreground="DarkSlateGray"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>
                                        <TextBlock Text="Hàng nghìn người đã thành công cai thuốc với QuitSmart. Bạn cũng có thể làm được!"
                                                   FontSize="16"
                                                   Foreground="DarkSlateGray"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="500"
                                                   Margin="0,0,0,24"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <Button Content="Đăng ký miễn phí"
                                                        Background="ForestGreen"
                                                        Foreground="White"
                                                        BorderBrush="ForestGreen"
                                                        Padding="24,12"
                                                        FontSize="16"
                                                        FontWeight="SemiBold"
                                                        Margin="0,0,16,0"
                                                        Cursor="Hand"
                                                        Command="{Binding NavigateToRegisterCommand}"/>
                                                <Button Content="Đăng nhập"
                                                        Background="Transparent"
                                                        Foreground="ForestGreen"
                                                        BorderBrush="ForestGreen"
                                                        Padding="24,12"
                                                        FontSize="16"
                                                        Cursor="Hand"
                                                        Command="{Binding NavigateToLoginCommand}"/>
                                        </StackPanel>
                                </StackPanel>
                        </Border>
                </StackPanel>
        </ScrollViewer>
</UserControl>
